{
  "name": "luo-one-ko",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "洛一 (Luo One) - 多邮箱管理系统",
  "author": "Luo One Team",
  "main": "electron-dist/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "build:electron": "tsc -p tsconfig.electron.json",
    "preview": "vite preview",
    "start": "node dist-server/index.js",
    "serve": "npm run build && npm run build:server && npm run start",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "electron:dev": "npm run build:electron && electron .",
    "electron:build": "npm run build && npm run build:server && npm run build:electron && electron-builder --config electron/electron-builder.json",
    "electron:build:win": "npm run electron:build -- --win",
    "electron:build:mac": "npm run electron:build -- --mac",
    "electron:build:linux": "npm run electron:build -- --linux",
    "electron:build:all": "npm run electron:build -- --win --mac --linux",
    "cap:init": "npx cap init '洛一' one.luo.ko --web-dir dist",
    "cap:add:ios": "npx cap add ios",
    "cap:add:android": "npx cap add android",
    "cap:sync": "npm run build && npx cap sync",
    "cap:copy": "npx cap copy",
    "cap:open:ios": "npx cap open ios",
    "cap:open:android": "npx cap open android",
    "cap:run:ios": "npx cap run ios",
    "cap:run:android": "npx cap run android",
    "mobile:build:ios": "npm run build && npx cap sync ios && npx cap open ios",
    "mobile:build:android": "npm run build && npx cap sync android && npx cap open android"
  },
  "dependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/app": "^6.0.3",
    "@capacitor/core": "^6.0.0",
    "@capacitor/haptics": "^6.0.3",
    "@capacitor/ios": "^6.0.0",
    "@capacitor/keyboard": "^6.0.4",
    "@capacitor/splash-screen": "^6.0.4",
    "@capacitor/status-bar": "^6.0.3",
    "astral-regex": "^2.0.0",
    "axios": "^1.13.2",
    "express": "^4.21.0",
    "http-proxy-middleware": "^3.0.2",
    "pinia": "^3.0.4",
    "vue": "^3.5.24",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.2.1",
    "@eslint/js": "^9.39.2",
    "@types/express": "^4.17.21",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "esbuild": "^0.27.3",
    "eslint": "^9.39.2",
    "eslint-plugin-vue": "^10.6.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.51.0",
    "vite": "^7.2.4",
    "vue-tsc": "^3.1.4"
  }
}
